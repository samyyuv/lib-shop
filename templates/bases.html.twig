				{% block header %}{% endblock %}
			</header>
			<main>
				{% block main %}{% endblock %}
			</main>

			<footer>
				{% block footer %}
					<div class="d-flex justify-content-around">
						<h3>
							<a href="{{ path('front_auteur_index') }} ">Liste de Auteurs</a>
						</h3>

						<h3>
							<a href="{{ path('rechercher') }} ">Liste de Categories</a>
						</h3>
						<h3>
							<a href="{{ path('front_livre_index') }} ">Liste de Livres</a>
						</h3>

						<h3>
							<a href="{{ path('front_home') }} ">Home</a>
						</h3>
					</div>
					<div>
					{% endblock %}
				</footer>
			{% endblock %}
		</body>
	</body>
</html>
