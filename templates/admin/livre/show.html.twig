{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
    <h1>Livre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ livre.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ livre.image }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ livre.dateCreation ? livre.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DateMiseAJour</th>
                <td>{{ livre.dateMiseAJour ? livre.dateMiseAJour|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ livre.prix }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_livre_index') }}">back to list</a>

    <a href="{{ path('admin_livre_edit', {'id': livre.id}) }}">edit</a>

    {{ include('admin/livre/_delete_form.html.twig') }}
