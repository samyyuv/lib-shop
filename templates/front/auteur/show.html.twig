{% extends 'base.html.twig' %}

{% block title %}Auteur
{% endblock %}

{% block body %}
	<center>
		<h1>Auteur</h1>
		<h1>{{ auteur.prenom }}
			{{ auteur.nom }}</h1>
		<p>
			{{ auteur.description }}
		</p>
		<br>
		<h2>Derniers livres :</h2>
		<div>
			{% for livre in auteur.livres %}
				<div>
					<h3>{{ livre.titre }}</h3>
					<h4>
						{{ livre.prix}}
						â‚¬
					</h4>
					<h3>Revendeur:</h3>
					<h4>
						<a href="{{ path('revendeur_show', {'id': livre.revendeur.id}) }}">{{ livre.revendeur.email }}</a>
					</h4>
					<hr>
				</div>
			{% endfor %}
		</div>

		<div>
			<h3>
				<a href="{{ path('front_auteur_index') }} ">Liste de Auteurs</a>
			</h3>

			<h3>
				<a href="{{ path('front_categorie_index') }} ">Liste de Categories</a>
			</h3>
			<h3>
				<a href="{{ path('front_livre_index') }} ">Liste de Livres</a>
			</h3>
		</div>
	</center>
{% endblock %}
