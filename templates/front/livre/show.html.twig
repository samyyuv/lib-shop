{% extends 'bases.html.twig' %}

{% block title %}Livre
{% endblock %}

{% block body %}

	<h1>Livre :
		{{ livre.titre }}</h1>

	<section class="my-4">
		<div class="d-flex flex-wrap justify-content-around">
			<div class="card mb-4 text-center" style="width: 18rem;">
				<img class="card-img-top" src="{{ livre.image }}" alt="{{ livre.titre }}">
				<div class="card-body">
					<h2 class="card-title">
						<a href="{{ path('front_auteur_show', {'id' : livre.auteur.id }) }}">{{ livre.auteur.nom }}
							{{ livre.auteur.prenom }}</a>
					</h2>


					<p class="card-text text-justify">{{ livre.description }}</p>
					<p class="card-text">{{ livre.prix }}
						â‚¬</p>
					<h5>Revendeur:</h5>
					<h5>
						<a href="{{ path('revendeur_show', {'id': livre.revendeur.id}) }}">{{ livre.revendeur.email }}</a>
					</h5>
					<a href="{{ path('panier_add', {'id': livre.id}) }}" class="btn btn-primary">Ajouter au panier</a>
				</div>
			</div>
		</div>
	</section>

{% endblock %}
